// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/kubernetes-helm-minikube
{
	"name": "Kubernetes - Minikube-in-Docker",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",

	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"enableNonRootDocker": "true",
			"moby": "true"
		},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
			"version": "latest",
			"helm": "latest",
			"minikube": "latest"
		},
		"ghcr.io/devcontainers/features/powershell:1": {},
		"ghcr.io/azure/azure-dev/azd:0": {}
	},
	
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [80, 443, 8081, 8082, 8083, 8200],
	// "portsAttributes ": {
	// 	"80": ["ingress http"],
	// 	"443": ["ingress https"]
	// },

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "kubectl version",

	// Use 'postStartCommand' to run commands after the container is created like starting minikube.
//	"postStartCommand": "nohup bash -c 'minikube start &' > minikube.log 2>&1",
	"postCreateCommand": "bash ./.devcontainer/minikubePostCreateCommand.sh",
	"postStartCommand": "bash ./.devcontainer/minikubePostStartCommand.sh",
	//"postStartCommand": "minikube dashboard",

	"customizations": {
		"vscode": {
			"settings": { 
				"terminal.integrated.defaultProfile.linux": "pwsh"
			},
			"extensions": [
				"ms-kubernetes-tools.vscode-kubernetes-tools",
				"ms-vscode.powershell"
			]
		}
	},

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
