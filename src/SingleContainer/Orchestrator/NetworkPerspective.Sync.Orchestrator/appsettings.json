{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8080"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Quartz": "Information"
    }
  },
  "AllowedHosts": "*",
  "Infrastructure": {
    "Core": {
      "BaseUrl": "",
      "MaxInteractionsPerRequestCount": 20000,
      "Resiliency": {
        "Retries": [
          "00:00:02.000",
          "00:00:05.000",
          "00:00:10.000",
          "00:01:00.000"
        ]
      }
    },
    "Vault": {
      "BaseUrl": "",
      "TestSecretName": "test-key"
    }
  },
  "DataSources": {
    "Slack": {
      "BaseUrl": "https://slack.com/api/",
      "Auth": {
        "Scopes": [
          "channels:history",
          "channels:join",
          "channels:read",
          "groups:history",
          "groups:read",
          "usergroups:read",
          "users.profile:read",
          "users:read",
          "users:read.email"
        ],
        "UserScopes": [
          "identify"
        ],
        "AdminUserScopes": [
          "admin.conversations:write",
          "admin.conversations:read"
        ]
      },
      "Resiliency": {
        "Retries": [
          "00:00:02.000",
          "00:00:05.000",
          "00:00:10.000",
          "00:01:00.000"
        ]
      }
    },
    "Jira": {
      "BaseUrl": "https://auth.atlassian.com/",
      "Auth": {
        "Path": "authorize",
        "Scopes": [
          "offline_access",
          "read:jira-work",
          "read:jira-user"
        ]
      }
    }
  },
  "ConnectionStrings": {
    "Database": ""
  },
  "App": {
    "SyncScheduler": {
      "CronExpression": "0 0 0 * * ?",
      "UsePersistentStore": true
    },
    "SecretRotationScheduler": {
      "Enabled": true,
      "RotateOnStartup": true,
      "CronExpression": "0 0 4,9,14,19,23 * * ?" // At second :00, at minute :00, at 04am, 09am, 14pm, 19pm and 23pm, of every day 
    }
  }
}